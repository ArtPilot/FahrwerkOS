<?xml version="1.0" ?>

<robot name="mrm" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="orange">
    <color rgba="1.0 0.5 0.2 1" />
  </material>
  <material name="gray">
    <color rgba="0.2 0.2 0.2 1" />
  </material>

  <material name="blue">
    <color rgba="0 1 0 1" />
  </material>
  
   <link name="dummy">
   </link>
    <link name="base_link">
        <pose>0 0 0.1 0 0 0</pose>
        <inertial>
            <mass value="5"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.375"/>
            <geometry>
                <box size="1.2 0.8 0.75"/>
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <box size="1 1 1"/>
            </geometry>
        </collision>
    </link>
   
  <joint name="dummy_joint" type="fixed">
     <parent link="dummy"/>
     <child link="base_link"/>
   </joint>

   <link name="right_stand">
    <visual>
      <geometry>
        <cylinder radius="0.04" length="1.665"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.8325"/>
    </visual>
  </link>

  <joint name="base_to_right_stand" type="fixed">
    <parent link="base_link"/>
    <child link="right_stand"/>
    <origin xyz="-0.2 -0.4 0.28"/>
  </joint>

  <link name="left_stand">
    <visual>
      <geometry>
        <cylinder radius="0.04" length="1.665"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.8325"/>
    </visual>
  </link>

  <joint name="base_to_left_stand" type="fixed">
    <parent link="base_link"/>
    <child link="left_stand"/>
    <origin xyz="-0.2 0.4 0.28"/>
  </joint>

  <link name="bridge_stand">
    <visual>
      <geometry>
        <cylinder radius="0.04" length="0.8"/>
      </geometry>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
    </visual>
  </link>


  <joint name="bridge_stand_to_left_stand" type="fixed">
    <parent link="left_stand"/>
    <child link="bridge_stand"/>
    <origin xyz="0 -0.4 1.665"/>
  </joint>


    <link name="laser">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.03"/>
            <geometry>
                <cylinder radius="0.07" length="0.03"/>
            </geometry>
            <material name="gray" />
        </visual>
    </link>


  <joint name="laser_joint" type="fixed">
    <parent link="bridge_stand" />
    <child link="laser" />
    <origin rpy="0 0 1.57075" xyz="0 0 0.04" />
  </joint>
  
    <link name="camera_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.05 0.05 0.05"/>
            </geometry>
            <material name="blue" />
        </visual>
    </link>

    

    <joint name="camera_joint" type="fixed">
        <parent link="bridge_stand"/>
        <child link="camera_link"/>
        <origin rpy="0 0 0" xyz="0.047 0.0 0.0"/>
        <axis xyz="1 0 0" />
    </joint>


</robot>
