<?xml version="1.0" ?>
<robot name="head_2d" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="orange">
    <color rgba="1.0 0.5 0.2 1" />
  </material>
  <material name="gray">
    <color rgba="0.2 0.2 0.2 1" />
  </material>
  
   <link name="dummy">
   </link>
    <link name="base_link">
        <pose>0 0 0.1 0 0 0</pose>
        <inertial>
            <mass value="5"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
        </inertial>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0.375"/>
            <geometry>
                <box size="0.8 1.2 0.75"/>
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <box size="1 1 1"/>
            </geometry>
        </collision>
    </link>
   
  <joint name="dummy_joint" type="fixed">
     <parent link="dummy"/>
     <child link="base_link"/>
   </joint>

  <joint name="laser_joint" type="fixed">
    <parent link="base_link" />
    <child link="laser" />
    <origin rpy="0 0 1.57075" xyz="0 0 0.51" />
  </joint>
    
    <link name="laser">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.07" length="0.03"/>
            </geometry>
            <material name="gray" />
        </visual>
    </link>
</robot>
